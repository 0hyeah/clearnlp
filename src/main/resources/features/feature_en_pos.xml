<!--Feature template for POS tagging in English -->
<feature_template>
	<cutoff label="0" feature="2" df="1" ambiguity="0.4"/>

	<!-- 1-gram features -->
	<feature f0="i-3:f2"/>
	<feature f0="i-2:f2"/>
	<feature f0="i-1:f2"/>
	<feature f0="i:f2"/>
	<feature f0="i+1:f2"/>
	<feature f0="i+2:f2"/>
	<feature f0="i+3:f2"/>

	<feature f0="i-3:p"/>
	<feature f0="i-2:p"/>
	<feature f0="i-1:p"/>
	<feature f0="i:a"/>
	<feature f0="i+1:a"/>
	<feature f0="i+2:a"/>
	<feature f0="i+3:a"/>

	<!-- 2-gram features -->
	<feature f0="i-2:f3" f1="i-1:f3"/>
	<feature f0="i-1:f3" f1="i:f3"/>
	<feature f0="i:f3"   f1="i+1:f3"/>
	<feature f0="i+1:f3" f1="i+2:f3"/>
	<feature f0="i-1:f3" f1="i+1:f3"/>

	<feature f0="i-2:p" f1="i-1:p"/>
	<feature f0="i+1:a" f1="i+2:a"/>
	<feature f0="i-1:p" f1="i+1:a"/>

	<!-- 3-gram features -->
	<feature f0="i-2:f3" f1="i-1:f3" f2="i:f3"/>
	<feature f0="i-1:f3" f1="i:f3"   f2="i+1:f3"/>
	<feature f0="i:f3"   f1="i+1:f3" f2="i+2:f3"/>
	<feature f0="i-2:f3" f1="i-1:f3" f2="i+1:f3"/>
	<feature f0="i-1:f3" f1="i+1:f3" f2="i+2:f3"/>

	<feature f0="i-2:p" f1="i-1:p" f2="i:a"/>
	<feature f0="i-1:p" f1="i:a"   f2="i+1:a"/>
	<feature f0="i-2:p" f1="i-1:p" f2="i+1:a"/>
	<feature f0="i-1:p" f1="i+1:a" f2="i+2:a"/>

	<!-- set features -->
	<feature t="s" f0="i:pf3"/>
	<feature t="s" f0="i:sf4"/>
	<feature t="s" f0="i:orth"/>

	<!-- binary features -->
	<feature t="b" f0="i:b0" note="input is the first token" visible="false"/>
	<feature t="b" f0="i:b1" note="input is the last token"/>
</feature_template>
