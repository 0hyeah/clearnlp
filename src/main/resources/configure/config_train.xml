<configuration>
    <language>english</language>

    <reader type="tsv">
        <column index="1" field="form"/>
        <column index="2" field="pos"/>
    </reader>

    <reader type="tsv">
        <column index="1" field="id"/>
        <column index="2" field="form"/>
        <column index="4" field="lemma"/>
        <column index="6" field="pos"/>
        <column index="7" field="feats"/>
        <column index="8" field="headId"/>
        <column index="9" field="deprel"/>
    </reader>

    <reader type="tsv">
        <column index="1" field="id"/>
        <column index="2" field="form"/>
        <column index="3" field="lemma"/>
        <column index="4" field="pos"/>
        <column index="5" field="feats"/>
        <column index="6" field="headId"/>
        <column index="7" field="deprel"/>
        <column index="8" field="sheads"/>
    </reader>

    <pos>
        <trainer algorithm="adagrad" type="svm" labelCutoff="2" featureCutoff="3" alpha="0.01" rho="0.1" average="false"/>
        <ambiguity_class_threshold>0.4</ambiguity_class_threshold>
        <proper_noun_tagset>NNP,NNPS</proper_noun_tagset>
        <bootstraps>true</bootstraps>
    </pos>

    <dep>
        <trainer algorithm="adagrad" type="svm" labelCutoff="2" featureCutoff="3" alpha="0.02" rho="0.1" average="false"/>
        <bootstraps>true</bootstraps>
        <beam_size>16</beam_size>
    </dep>




    <seq>
        <trainer algorithm="adagrad" type="svm" labelCutoff="2" featureCutoff="3" alpha="0.01" rho="0.1" average="false"/>
        <token_based>false</token_based>
        <bootstraps>true</bootstraps>
    </seq>
</configuration>

